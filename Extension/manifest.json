{
  "manifest_version": 3,
  "name": "Tab Summarizer",
  "description": "Click the extension icon to summarize the current tab",
  "version": "1.0",
  "action": {
    "default_popup": "summarization.html",
    "default_icon": "TabSummarizer_icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.vc.bilibili.com/dynamic_svr/v1/dynamic_svr/space_history"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "options_page": "options.html"
}